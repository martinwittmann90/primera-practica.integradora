<h1>REGISTRAR NUEVO PRODUCTO</h1>
<section>
  <div class="container mt-6" style="max-width: 500px">
    <form id="formProducts" class= "styleForm">
        <h3 class="is-size-3 mb-5">Ingrese un nuevo producto</h3>
          <div class="field">
            <label for="title" class="label">Título</label>
            <div class="control">
              <input class="input is-success" type="text" placeholder="Agregar un titulo al producto" value="" name="title"/>
            </div>
          </div>
          <div class="field">
            <label class="label">Descripción</label>
            <div class="control">
              <textarea value="" name="description" class="textarea is-success" placeholder="Ingrese una breve descripción del producto" rows="3"></textarea>
            </div>
          </div>
          <div class="field">
            <label class="label">Código</label>
            <div class="control">
              <input class="input is-success" type="text" placeholder="Ingrese el código del producto" value="" name="code"/>
            </div>
          </div>
          <div class="field">
            <label class="label">Precio</label>
            <div class="control">
              <input
                class="input is-success" type="text" placeholder="Ingrese el precio del producto" value="" name="price"/>
            </div>
          </div>
          <div class="field">
            <label class="label">Stock</label>
            <div class="control">
              <input
                class="input is-success" type="number" min="0" max="10000" value="0" name="stock"/>
            </div>
          </div>
          <div class="field">
            <label class="label">Categoría</label>
            <div class="control">
              <div class="select is-primary">
                <select name="category">
                  <option value="Camisetas">Camisetas</option>
                  <option value="Shorts">Shorts</option>
                  <option value="Medias">Medias</option>
                  <option value="Botines">Botines</option>
                  <option value="Camperas">Camperas</option>
                </select>
              </div>
            </div>
          <div class="field">
            <label class="label">Imágen</label>
            <div class="control">
              <input class="input is-success" type="text" placeholder="Ingrese una url con la imágen del producto" value="" name="thumbnails"/>
            </div>
          </div>
            {{!-- <label for="thumbnails">Imagen:</label>
                <input type="file" id="thumbnails" name="thumbnails" required> --}}
            <div class="field is-grouped">
        <div class="control">
          <button class="button is-primary is-light">Agregar</button>
        </div>
      </div>
    </form>
  </div>
</section>
<section class="mt-6">
  <div id="cardContainer" idstyle="text-align: center;" class="container is-flex is-flex-wrap-wrap">
    {{#each products}}
            <div class="card" style="width: 150px; margin: 20px">
        <div class="card-image" style="padding: 15px">
          <figure class="image is-4by3">
            <img src="{{thumbnails}}" alt="product image" width="200" height="200">
          </figure>
        </div>
        <div class="card-content" >
          <div class="media">
            <div class="media-content">
              <p class="title is-6">Nombre: {{this.title}}</p>
              <p class="subtitle is-6">Descripción: {{this.description}}</p>
              <p class="subtitle is-6">Precio: {{this.price}}</p>
              <p class="subtitle is-6">Stock: {{this.stock}}</p>
              <p class="subtitle is-6">Categoria: {{this.category}}</p>
            </div>
          </div>
          <button class="button is-small" type="button" onclick="deleteProduct({{id}})">
          <ion-icon name="trash"></ion-icon></button>
        </div>
      </div>
    {{/each}}
  </div>
</section>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>